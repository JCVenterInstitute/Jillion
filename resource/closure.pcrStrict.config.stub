primer_design.namePrefix=TBD
primer_design.redesignCount=0

# identifies the min depth that any of the target feature region(s)
# must be covered by the set of successfully designed primer pairs
# if the expanding coverage primer design algorithm is used,
# this value equals the number of primer pairs designed
# for the target region(s)
primer_design.coverageDepth=2

# identifies regions where primers are not allowed to land
# set to non-existant file (like /dev/null) to disable
primer_design.avoidRegionsFile=/dev/null

# leave blank for closure primer design
reporting.forwardAdapterSequence=
reporting.reverseAdapterSequence=

# template sequence and feature file locations
template.sequenceFilename=TBD
template.targetsFilename=TBD

# require primers to be no closer than this # of bp
# to a feature start/end range
template.seqQualRampUpPadding=300

# require primers to be no farther than this # of bp
# from padded feature start/end locations to be considered valid;
# actual max distance from padded start/end may be further
# limited by the available subject sequence before/after
# feature target region
template.flankingSearchSpace=5000

# consolidates features within this distance of one another
# into a single sequencing feature
# set to 0 to disable feature consolidation
template.proximalDistanceCollapseTheshold=0

# identify template sequence snp locations
# set to non existant file (like /dev/null) if no snp info available
template.SNPsFilename=/dev/null

# re-sequencing specific phase shift settings
# basically ignored by/extraneous to closure primer design
primer_critique.maxPhaseShifterEventsAllowed=100
primer_critique.minPhaseShifterEventsDistance=0
primer_critique.minPhaseShifterEdgeDistance=0

# homopolymer detection settings
# mostly ignored by/extraneous to closure primer design
primer_critique.monoNucThresh=5
primer_critique.diNucThresh=6
primer_critique.minStutterProx=120
primer_critique.maxStutterMotifs=100
primer_critique.minStutterEdgeProximity=10

# primer sequence requirements
# valid primer must meet at least one of the following criteria
# to be considered a valid primer
#      1. a > percentCompositeCutoff match to target reference sequence
#         and a > numThreePrimeExact 3' end exact match to the reference sequence
#      2. a > minCriticalCutoff 3' end exact match to the reference sequence
primer_critique.percCompositeCutoff=80
primer_critique.numThreePrimeExact=4
primer_critique.minCriticalCutoff=11

# do not consider a potential primer binding region
# in unique binding region evaluation if its size
# is greater than this maxAmpliconLength
# for closure primer design, set this value to
# an outrageously high value to ensure primer
# uniqueness across the entire reference sequence
primer_critique.maxAmpliconLength=100000000000

# halt critique and mark candidate primer a failure
# at first critique failure
primer_critique.earlyAbort=1

# choose primer designer sequence aligner tool
# use dreg if reference sequence contains ambiguities
# or if reference sequence a smaller sequence and
# significantly slower design computation times are acceptable
#primer_critique.alignmentTool=dreg
primer_critique.alignmentTool=blast

# primer designer tool locations
primer_critique.dregBinPath=/usr/local/packages/EMBOSS/bin/dreg
primer_critique.blastallBinPath=/usr/local/bin/blastall
primer_critique.bl2seqBinPath=/usr/local/bin/bl2seq
primer_critique.formatdbBinPath=/usr/local/bin/formatdb

# blast temp dir, best to keep local for performance
# even at risk of running out of smaller local resource
primer_critique.blastTempDirectory=/tmp

primer_critique.primerAlignmentsFileDirectory=TBD
primer_critique.subjectPath=TBD
primer_critique.subjectPattern=TBD
primer_critique.referenceIndexPath=TBD

# make sure template amplicon a rough match
# against the reference sequence
# only necessary to enable (i.e. set to 0)
# if reference sequence and template sequence are divergert
primer_critique.skipTemplRefAmplSimiliarityCheck=1

# repeat detection settings used to exclude/skip
# sections of the reference/target sequence due to
# the existance of repeat sequence
# set dir to NULL to disable
primer_critique.repeatAlignmentsFileDirectory=NULL
primer_critique.repeatPath=NULL
primer_critique.repeatPattern=NULL
primer_critique.repeatLengthThreshold=0
primer_critique.repeatPercCompositeCutoff=80
primer_critique.repeatNumThreePrimeExact=0
primer_critique.repeatMaxAmpliconLength=1700

# amplicon min/max melting temp
# and max melting temp limit standard deviation
primer_critique.maxMeltingTempAmplicon=85.0
primer_critique.minMeltingTempAmplicon=70
primer_critique.stdDevLimitMeltingTempAmplicon=0.4

# primer min/max melting temp
# and required salt/DNA conc settings
primer_critique.maxAnnealingTempPrimers=65
primer_critique.minAnnealingTempPrimers=62
primer_critique.saltConc_mM=50.0
primer_critique.DNAConc_nM=120.0

# max fwd/rev primer melting temp difference
primer_critique.maxPrimerTmDifference=2

primer_critique.intDimerMaxScore=8
primer_critique.endDimerMaxScore=3
primer_critique.forwardAdapterSequence=
primer_critique.reverseAdapterSequence=

primer_critique.palindromeBin=/usr/local/packages/EMBOSS/bin/palindrome
primer_critique.minPalindromeHBonds=14
primer_critique.maxPalindromeMateDistance=11
primer_critique.palindromeTempDirectory=/tmp

# check primers for low complexity regions
# and reject primers if these regions percentage of the primer
# is > the specified low complexity cutoff
primer_critique.dustBinPath=/usr/local/bin/dust
primer_critique.lowComplexityFilterPercentCutoff=80

# select target amplicon coverage algorithm
#     1. expanding algorithm ensures that a single primer pair amplicon
#        covers entire feature region plus any necessary adjacent sequencing region
#     2. tiling algorithm ensures that a set of primer pairs create an overlapping
#        set of primer amplicons that cover the feature region
coverage.coverageAlgorithm=expanding

# expanding algorithm primer search range expansion rate
# grows primer amplicon size by this number of base pairs during
# evaluation of potential forward/reverse primer sites
coverage.searchRateExpansion=100

# tiling algorithm primer discovery criteria settings
# since closure primer design uses the expanding coverage algorithm
# these config value have no impact on closure primer design
coverage.ampliconOverlapGoalsOpt=0
coverage.ampliconOverlapGoalsMin=0
coverage.ampliconOverlapGoalsMax=0

# min/max/optimal primer amplicon size thresholds/targets
coverage.ampliconSizeGoalsOpt=TBD
coverage.ampliconSizeGoalsMin=TBD
coverage.ampliconSizeGoalsMax=10000

# min/max/optimal primer size thresholds/targets
coverage.primerSizeGoalsOpt=26
coverage.primerSizeGoalsMin=22
coverage.primerSizeGoalsMax=30

# tiling algorithm primer coverage analysis criteria settings
# since closure primer design uses the expanding coverage algorithm
# these config value have no impact on closure primer design
coverage.searchRateContraction=30
coverage.searchRateAdvancement=5

# primer design primer3 executable and temp dir location
coverage.primer3_corePath=/usr/local/bin/primer3_core
coverage.primer3_coreTempDir=/tmp

# primer3 primer design settings
# most settings govern primer and amplicon
# min/max melting temperature and salt/dna conc settings
# should mimic critiquor settings to reduce (nearly eliminate)
# risk of designing an unusable primer pair
primer3_core.PRIMER_NUM_NS_ACCEPTED=0
primer3_core.PRIMER_EXPLAIN_FLAG=1
primer3_core.PRIMER_MIN_TM=62
primer3_core.PRIMER_MAX_TM=65
primer3_core.PRIMER_OPT_TM=63.5
primer3_core.PRIMER_PRODUCT_MAX_TM=85
primer3_core.PRIMER_PRODUCT_MIN_TM=70
primer3_core.PRIMER_SALT_CONC=50.0
primer3_core.PRIMER_DNA_CONC=120.0